datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  password          String
  firstName         String?
  lastName          String?
  street            String?
  number            String?
  postalCode        String?
  city              String?
  country           String?
  phone             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // NIEUWE VELDEN VOOR WACHTWOORD RESET
  resetToken        String?   // Token om de gebruiker te authenticeren
  resetTokenExpires DateTime? // Vervaldatum van de token
}
